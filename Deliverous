piwik-mysql:
  image: mysql:5.6
  volumes:
  - name: piwik-mysql
    path: /var/lib/mysql

piwik:
  image: etiennecharignon/docker-piwik
  hostname: analytics.ut7.fr
  ports:
  - ip: analytics.ut7.fr
    container_port: 80
    host_port: 80
  volumes:
  - name: piwik-data
    path: /app/config
  links:
  - name: piwik-mysql
    alias: mysql

admin:
  image: registry.deliverous.net/deliverous/docker-bassine-deliverous:0.1.0-0
  ports:
  - ip: analytics.ut7.fr
    container_port: 22
    host_port: 22
  links:
  - name: piwik-mysql
    alias: mysql
  limits:
    memory: 4G
